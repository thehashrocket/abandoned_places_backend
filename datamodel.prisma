enum Permission {
	ADMIN
	USER
	ITEMCREATE
	ITEMUPDATE
	ITEMDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @id
	name: String!
	email: String! @unique
	password: String!
	resetToken: String
	resetTokenExpiry: String
	permissions: [Permission!]! @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}
